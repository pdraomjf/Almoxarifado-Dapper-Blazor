@using System.Globalization

@inherits MyInputIntComponent

<div>
    <label>@Title</label>
    <input type="number" value="@Value?.ToString(CultureInfo.InvariantCulture)" step="1" disabled="@Disabled" @onchange="OnChangeAsync" class=@("form-control" + (Errors == null || Errors.Count() == 0 ? "" : " is-invalid")) />

    @if (Errors != null && Errors.Count() > 0)
    {
        <div class="invalid-feedback">
            <ul>
                @foreach (var error in Errors)
                {
                    <li>@error.Message</li>
                }
            </ul>
        </div>
    }
</div>
